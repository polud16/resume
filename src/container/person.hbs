<div>
    {{#with person}}
    <div>
        <h1>{{name}}</h1>
    </div>
    <p><strong>Age:{{age}}</strong></p>
    <p><strong>Sex:{{gender}}</strong></p>

    {{#with address}}
    <div>
        {{country}},{{zip}},{{state}}
        <br>
        {{city}},{{street}}
    </div>
    {{/with}}
</div>
<br>
<hr>
<br>
<div>
    <h2>Education</h2>
    <ul>
        {{#each education}}
        <li>
            <b>{{university}}</b> ({{graduationYear}})
            <br>
            <ul>
                <li>
                    {{degree}}
                </li>
                <li>
                    {{major}}
                </li>
            </ul>
        </li>
        {{/each}}
    </ul>
    <br>
    <hr>
    <br>

    <div>
        <h3>Work Experience</h3>
        <ul>
            {{#each workExperience}}
            <li>
                <b>{{company}}</b>
            </li>
            <ul>
                <li>
                    <div><em>{{title}}</em></div>
                </li>
                <li>
                    ({{startDate}}) - ({{endDate}})
                </li>

                {{#each responsibilities}}
                <ul>
                    <li>{{this}}</li>
                </ul>
                {{/each}}
                </li>
            </ul>
            <br>
            <br>
            <hr>
            <div>
                <h4>
                    {{company}} {{industry}} ({{year_founded}})
                </h4>
            </div>
            <hr>
            <diV>
                <ul>
                    {{#each employees}}
                    <b>{{name}}</b>
                    <li>
                        {{position}}
                    </li>
                    <li>
                        {{department}}
                    </li>
                    <br>

                    <ul>
                        {{#each projects}}
                        <b>{{name}}</b>
                        <li>
                            {{description}}
                        </li>
                        <li>
                            {{status}}
                        </li>
                        <br>
            </diV>

            <div>
                <ul>
                    {{#each teams}}
                    <strong>{{team_name}}</strong>
                    {{#with team_leader}}
                    <li>
                        {{name}}
                    </li>
                    <li>
                        {{title}}
                    </li>
                    <li>
                        <a>{{email}}</a>
                    </li>
                    {{/with}}
                    {{/each}}
                </ul>
                {{/each}}
        </ul>

        {{/each}}
        </ul>
        {{/each}}

    </div>
</div>
{{/with}}