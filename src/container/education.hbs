<div>
    {{#with main}}
    <main>
        <section>
            {{> title data='My Education' big=true}}
            <ul>
                {{#each education}}
                <li>
                    {{name}}
                    {{#if isEnd}} (end) {{/if}}
                    {{#unless isEnd}} (Ще в процесі) {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>

        <section>
            {{> title data='My Certificates' big=false}}
            <ul>
                {{#each certificates}}
                <li>
                    {{name}} --- ({{id}})
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>