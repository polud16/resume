                <div>
                    <ul>
                        {{#each exhibits}}
                        <strong>{{name}}</strong>
                        <li>
                            {{>artist}}
                        </li>
                        <li>
                            {{description}}
                        </li>
                        <li>
                            {{audio_guide}}
                        </li>
                        {{/each}}
