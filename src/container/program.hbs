                {{/with}}
                {{/each}}
            </div>
            <br>
            <hr>
            <br>
            <div>
                <strong>{{program.[1].name}}</strong>
            </div>
            <div>
                <ul>
                    <li>
                        {{program.[1].type}}
                    </li>
                    <li>
                        {{program.[1].duration}}
