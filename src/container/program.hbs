                </ul>
            </div>
            <br>
            <div>
                {{#each program}}
                {{#with details}}
                {{#with venue}}
                <h2>{{name}}</h2>
                <div>
                    {{#with location}}
                    {{address}}
                    <br>
                    <strong>({{city}})</strong>
                    <em>{{country}}</em>
                    {{/with}}
                </div>
                {{/with}}
                <br>
                <div>
                    <ul>
                        {{#each performers}}
                        <li>
                            <strong>{{name}}</strong>
                            <br>
                            {{type}}
                        </li>
                        {{/each}}
                    </ul>
                </div>
                {{/with}}
                {{/each}}
