<div>
    <div>
        {{#with program}}
        {{#with excursion}}
        <h1>{{name}}</h1>
        <diV>
            {{#with location}}
            <b>{{city}}</b>
            ({{country}})
            {{/with}}
        </div>
        <em>{{date}}</em>
        <hr>
        <br>
        <div>
            <div>
                <strong>{{program.[0].name}}</strong>
            </div>
            <div>
                <ul>
                    <li>
                        {{program.[0].type}}
                    </li>
                    <li>
                        {{program.[0].duration}}
                    </li>
                </ul>
            </div>
            <br>
            <div>
                {{#each program}}
                {{#with details}}
                {{#with museum}}
                <h2>{{name}}</h2>
                <div>
                    {{#with location}}
                    {{address}}
                    <br>
                    <strong>({{city}})</strong>
                    <em>{{country}}</em>
                    {{/with}}
